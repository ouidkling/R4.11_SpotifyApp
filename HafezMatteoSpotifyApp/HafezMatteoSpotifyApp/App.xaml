<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HafezMatteoSpotifyApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryColor">#1DB954</Color>
            <Color x:Key="SecondaryColor">#191414</Color>
            <Color x:Key="AccentColor">#FFFFFF</Color>
            
            <Style TargetType="{x:Type TabbedPage}">
                <Setter Property="BarBackgroundColor" Value="{StaticResource SecondaryColor}"/>
                <Setter Property="SelectedTabColor" Value="{StaticResource PrimaryColor}"/>
                <Setter Property="UnselectedTabColor" Value="{StaticResource AccentColor}"/>
            </Style>
            
            <Style TargetType="{x:Type Button}">
                <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}"/>
                <Setter Property="TextColor" Value="{StaticResource SecondaryColor}"/>
            </Style>
            
            <Style TargetType="{x:Type Label}">
                <Setter Property="TextColor" Value="{StaticResource PrimaryColor}"/>
            </Style>
            
            
        </ResourceDictionary>
    </Application.Resources>
</Application>